    <script>
        // Navigation Menu
        function toggleMenu() {
            const navLinks = document.getElementById('navLinks');
            navLinks.classList.toggle('active');
        }

        // PDF Converter
        document.getElementById('pdfInput').addEventListener('change', async (e) => {
            const file = e.target.files[0];
            const reader = new FileReader();
           
            reader.onload = async () => {
                const typedarray = new Uint8Array(reader.result);
                const pdf = await pdfjsLib.getDocument(typedarray).promise;
                let text = '';
               
                for(let pageNum = 1; pageNum <= pdf.numPages; pageNum++) {
                    const page = await pdf.getPage(pageNum);
                    const content = await page.getTextContent();
                    text += content.items.map(item => item.str).join(' ');
                }
               
                document.getElementById('textOutput').innerText = text;
            };
           
            reader.readAsArrayBuffer(file);
        });

        function downloadText() {
            const text = document.getElementById('textOutput').innerText;
            const blob = new Blob([text], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'converted_text.txt';
            a.click();
        }

        // Horoscope
        function getPrediction() {
            const zodiac = document.getElementById('zodiac').value;
            const predictions = {
                aries: "‡∂î‡∂∂‡∂ú‡∑ö ‡∑Å‡∂ö‡∑ä‡∂≠‡∑í‡∂∫ ‡∂∏‡∑ô‡∂∏ ‡∑É‡∂≠‡∑í‡∂∫‡∑ö‡∂Ø‡∑ì ‡∂Ö‡∂±‡∂±‡∑ä‡∂≠ ‡∑Ä‡∑ö! üåü",
                taurus: "‡∂∏‡∑ñ‡∂Ω‡∑ä‚Äç‡∂∫ ‡∑É‡∑ä‡∂Æ‡∑è‡∑Ä‡∂ª‡∂≠‡∑ä‡∑Ä‡∂∫ ‡∂Ω‡∑ê‡∂∂‡∑ö üí∞",
                // Add all 12 predictions
            };
           
            document.getElementById('prediction').innerHTML = `
                <div class="animated-box">
                    <h3>üåü ${zodiac.toUpperCase()} ‡∂¥‡∑î‡∂ª‡∑ù‡∂ö‡∂Æ‡∂±‡∂∫:</h3>
                    <p>${predictions[zodiac]}</p>
                </div>
            `;
        }

        // AI Chat
        let partner = 'gf';
       
        function toggleChat() {
            const chatWindow = document.getElementById('chat-window');
            chatWindow.style.display = chatWindow.style.display === 'block' ? 'none' : 'block';
        }
       
        function setPartner(type) {
            partner = type;
            document.getElementById('chat-messages').innerHTML +=
                `<div class="system-msg">--- ${type === 'gf' ? 'Girlfriend' : 'Boyfriend'} Mode Activated ---</div>`;
        }
       
        document.getElementById('chat-input').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                const msg = e.target.value;
                const lang = detectLanguage(msg);
               
                // User message
                const userMsg = `<div class="user-msg">${msg}</div>`;
                document.getElementById('chat-messages').innerHTML += userMsg;
               
                // AI response
                setTimeout(() => {
                    const responses = {
                        gf: {
                            en: ["You're amazing! üíñ", "How can I support you today?"],
                            si: ["‡∂î‡∂∫‡∑è ‡∂â‡∂≠‡∑è‡∂∏ ‡∂¥‡∑î‡∂Ø‡∑î‡∂∏‡∑è‡∂ö‡∑è‡∂ª‡∂∫‡∑í! üíñ", "‡∂Ö‡∂Ø ‡∂î‡∂∫‡∑è‡∂ß ‡∂∏‡∂∏ ‡∂ö‡∑ô‡∑É‡∑ö ‡∂ã‡∂Ø‡∑Ä‡∑ä ‡∂ö‡∑Ö ‡∑Ñ‡∑ê‡∂ö‡∑í‡∂Ø?"]
                        },
                        bf: {
                            en: ["Let's achieve great things! üí™", "You inspire me!"],
                            si: ["‡∂Ö‡∂¥‡∑í ‡∂Ω‡∑ú‡∂ö‡∑î ‡∂Ø‡∑ö‡∑Ä‡∂Ω‡∑ä ‡∑É‡∑è‡∂ª‡∑ä‡∂Æ‡∂ö ‡∂ö‡∂ª‡∂∏‡∑î! üí™", "‡∂î‡∂∫‡∑è ‡∂∏‡∑è‡∑Ä ‡∂Ü‡∂Ø‡∂ª‡∑ä‡∑Å‡∂±‡∂∫ ‡∂ö‡∂ª‡∂±‡∑Ä‡∑è!"]
                        }
                    };
                   
                    const response = responses[partner][lang][Math.floor(Math.random()*2)];
                    document.getElementById('chat-messages').innerHTML +=
                        `<div class="ai-msg">${response}</div>`;
                }, 500);
               
                e.target.value = '';
            }
        }
       
        function detectLanguage(text) {
            const sinhalaPattern = /[\u0D80-\u0DFF]/;
            return sinhalaPattern.test(text) ? 'si' : 'en';
        }

        // Initialize AOS
        AOS.init({ duration: 1000 });
    </script>
